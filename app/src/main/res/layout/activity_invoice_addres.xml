<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司名称"
                android:textColor="@color/fontColor"
                android:textSize="14sp" />

            <com.rainwood.tools.view.ClearEditText
                android:id="@+id/cet_company"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/common_input"
                android:textSize="18sp" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司税号（P.IVA）"
                android:textColor="@color/fontColor"
                android:textSize="14sp" />

            <com.rainwood.tools.view.ClearEditText
                android:id="@+id/cet_tax_num"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/common_input"
                android:textSize="18sp" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PEC邮箱/SDI"
                android:textColor="@color/fontColor"
                android:textSize="14sp" />

            <com.rainwood.tools.view.ClearEditText
                android:id="@id/cet_email"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/common_input"
                android:textSize="18sp" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="@color/fontColor"
                android:textSize="14sp" />

            <com.rainwood.tools.view.ClearEditText
                android:id="@+id/cet_mobile"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                app:regexType="mobile"
                android:hint="@string/common_input"
                android:textSize="18sp" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在地区"
                android:textColor="@color/fontColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_region"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/common_input"
                android:textSize="18sp" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址"
                android:textColor="@color/fontColor"
                android:textSize="14sp" />

            <com.rainwood.tools.view.ClearEditText
                android:id="@+id/cet_address"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/common_input"
                android:textSize="18sp" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp" />

            <LinearLayout
                android:id="@+id/ll_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_default"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/radio_uncheck_shape" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/common_default_address"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_save"
                style="@style/RedButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:text="@string/common_save" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>