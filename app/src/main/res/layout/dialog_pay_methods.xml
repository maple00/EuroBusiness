<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/padding_right"
    android:paddingEnd="@dimen/padding_left">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_4"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="请选择收款方式"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/lv_method"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="30dp"
            android:divider="@color/transparent"
            android:dividerHeight="30dp"
            android:paddingStart="35dp"
            android:paddingEnd="0dp"
            android:scrollbars="none" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:paddingStart="35dp"
            android:paddingEnd="35dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_radius_red_empty_4"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingTop="16dp"
                android:paddingRight="15dp"
                android:paddingBottom="16dp"
                android:text="@string/common_cancel"
                android:textColor="@color/red30"
                android:textSize="14sp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_confirm"
                style="@style/RedButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/common_confirm" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>