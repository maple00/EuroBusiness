<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginEnd="15dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="13dp"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_page_back" />

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:background="@drawable/bg_search_bar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_search_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:text="商品"
                android:textColor="@color/textColor"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_down_selector" />

        </LinearLayout>

        <com.rainwood.tools.view.ClearEditText
            android:id="@+id/et_search"
            style="@style/StyleEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="@string/purchase_search"
            android:hint="@string/purchase_search"
            tools:ignore="TextFields"
            tools:targetApi="o" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_search_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_weight="1"
        android:background="@drawable/bg_search_bar">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:src="@mipmap/icon_search" />

        <com.rainwood.tools.view.ClearEditText
            android:id="@+id/cet_search_hint"
            style="@style/StyleEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/index_search_view_tips"
            tools:ignore="TextFields" />


    </LinearLayout>

    <Space
        android:layout_width="15dp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_new_found"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:src="@drawable/ic_icon_new_found2"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_screening"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:src="@drawable/ic_screening" />

</LinearLayout>